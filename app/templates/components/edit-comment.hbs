{{#if editMe}}
  <div class="row">
    <div class="col-xs-2">
      <p>{{comment.username}}</p>
    </div>
    <div class="col-xs-6">
      <form>
      {{textarea value=text id="text" class="form-control" placeholder=comment.text}}
      </form>
    </div>
    <div class="col-xs-1">
      <button {{action 'updateComment' comment}} class="btn btn-info btn-sm" style="float: right;">Save</button>
    </div>
    <div class="col-xs-2 text-center">
      <button class="btn btn-danger btn-sm" {{action 'deleteComment' comment}}>Delete</button>
    </div>
    <div class="col-xs-1">
      <button class="btn btn-default btn-sm" {{action 'hideEditMe'}} style="float: right;">Cancel</button>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-xs-2">
      <p>{{comment.username}}</p>
    </div>
    <div class="col-xs-8">
      <p>{{comment.text}}</p>
    </div>
    <div class="col-xs-2">
      <button class="btn btn-default btn-sm" {{action 'showEditMe'}} style="float: right;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
    </div>
  </div>
{{/if}}
