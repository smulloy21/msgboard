{{#if addComment}}
  <h3 class="title">New Comment</h3>
  <form>
    <div class="form-group">
      <label for="username">Username</label>
      {{input value=username id="username" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="text">Comment</label>
      {{textarea value=text id="text" class="form-control"}}
    </div>

    <button {{action 'saveComment'}} class="btn btn-info">Submit</button>
    <button {{action 'hideAddComment'}} class="btn btn-default">Cancel</button>
  </form>
{{else}}
  <button class="btn btn-info" {{action 'showAddComment'}}>Add Comment</button>
{{/if}}
<br>
