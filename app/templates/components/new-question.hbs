<h3 class="title">New Question</h3>
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="text">Question</label>
    {{textarea value=text id="text" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="username">Username</label>
    {{input value=username id="username" class="form-control"}}
  </div>

  <button {{action 'saveQuestion'}} class="btn btn-info">Ask</button>
</form>
<br>
